{
  "manifest_version": 3,
  "name": "PoE Wiki Search",
  "version": "1.0.6",
  "description": "Stupid-simple wiki search for PoE!",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["declarativeNetRequest", "tabs"],
  "icons": {
    "96": "icons/icon_96.png",
    "152": "icons/icon_152.png"
  },
  "host_permissions": [
    "https://pathofexile.fandom.com/*",
    "https://*.google.com/*",
    "https://*.duckduckgo.com/*"
  ],
  "action": {
    "default_popup": "ui/ui.html",
    "default_title": "PoE Wiki Search",
    "default_icons": {
      "96": "icons/icon_96.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+W"
      }
    }
  }
}
